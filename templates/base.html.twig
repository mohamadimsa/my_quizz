<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
		<title>
			{% block title %}My_quizz!
			{% endblock %}
		</title>
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

	</head>
	<body>
	        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
		{% for message in app.flashes('error') %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}
		<div class="container-fluid">
			<div class="row">

				<nav class="navbar navbar-expand-lg navbar-light bg-light col">
					<a class="navbar-brand" href="{{ path('home')}}">My_quizz</a>
					{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
						<a class="link" href="{{ path('app_logout') }}">deconnexion</a>
					{% else %}
						<ul>
							<li><a href="{{path("app_login") }}">se connecter</a></li>
							<li><a href="{{path("app_register") }}">s'inscrire</a></li>
						</ul>
					{% endif %}

				</nav>
			</div>
		</body>
	</body>
</html></div>{% block body %}{% endblock %}</body></html>
